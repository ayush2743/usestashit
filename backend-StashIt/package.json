{
  "name": "stashit-backend",
  "version": "1.0.0",
  "description": "Microservices backend for Stash It college marketplace",
  "main": "index.js",
  "scripts": {
    "start": "concurrently \"npm run start:gateway\" \"npm run start:auth\" \"npm run start:user\" \"npm run start:product\" \"npm run start:search\" \"npm run start:messaging\" \"npm run start:wishlist\"",
    "start:gateway": "node services/api-gateway/server.js",
    "start:auth": "node services/auth-service/server.js",
    "start:user": "node services/user-service/server.js",
    "start:product": "node services/product-service/server.js",
    "start:search": "node services/search-service/server.js",
    "start:messaging": "node services/messaging-service/server.js",
    "start:wishlist": "node services/wishlist-service/server.js",
    "dev": "concurrently \"npm run dev:gateway\" \"npm run dev:auth\" \"npm run dev:user\" \"npm run dev:product\" \"npm run dev:search\" \"npm run dev:messaging\" \"npm run dev:wishlist\"",
    "dev:gateway": "nodemon services/api-gateway/server.js",
    "dev:auth": "nodemon services/auth-service/server.js",
    "dev:user": "nodemon services/user-service/server.js",
    "dev:product": "nodemon services/product-service/server.js",
    "dev:search": "nodemon services/search-service/server.js",
    "dev:messaging": "nodemon services/messaging-service/server.js",
    "dev:wishlist": "nodemon services/wishlist-service/server.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:seed": "node prisma/seed.js",
    "setup": "npm install && npx prisma generate && npx prisma db push"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "@prisma/client": "^5.7.1",
    "redis": "^4.6.10",
    "multer": "^1.4.5-lts.1",
    "cloudinary": "^1.41.0",
    "joi": "^17.11.0",
    "axios": "^1.6.0",
    "socket.io": "^4.7.4",
    "socket.io-client": "^4.7.4",
    "http-proxy-middleware": "^2.0.6",
    "uuid": "^9.0.1",
    "express-rate-limit": "^7.1.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.2",
    "prisma": "^5.7.1"
  },
  "keywords": ["marketplace", "microservices", "nodejs", "postgresql", "redis"],
  "author": "Your Name",
  "license": "MIT"
} 